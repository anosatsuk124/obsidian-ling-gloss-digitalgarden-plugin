{
	"compilerOptions": {
		"esModuleInterop": true,
		"baseUrl": "./src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "CommonJS",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["ES5", "ES6", "ES7"],
		"outDir": "dist"
	},
	"include": ["**/*.ts"]
}
